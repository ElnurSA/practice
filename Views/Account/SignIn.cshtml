@model LoginVM



<!-- Registration 1 - Bootstrap Brain Component -->
<div class="container mt-5">
    <h1 class="text-center">Sign In</h1>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="register-area mt-5" style="width:50%; margin: 0 auto; background-color:lightblue; padding:20px; border-radius:30px">
        <form method="post" asp-action="SignIn">
            <div class="form-group">
                <label>Email or Username</label>
                <input asp-for="EmailOrUsername" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="EmailOrUsername"></span>

            </div>
         
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input asp-for="Password"  class="form-control" id="exampleInputPassword1">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="button-div d-flex justify- content-center">
                <button type="submit" class="btn btn-primary">Sign In</button>
            </div>
        </form>
    </div>
    <a asp-action="SignUp">Go to Sign up</a>
</div>