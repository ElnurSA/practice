@model RegisterVM

@section css{
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
}

<!-- Registration 1 - Bootstrap Brain Component -->
<div class="container mt-5">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="register-area mt-5" style="width:50%; margin: 0 auto; background-color:lightblue; padding:20px; border-radius:30px">
        <form method="post" asp-action="SignUp">
            <div class="form-group">
                <label> Username</label>
                <input asp-for="Username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Username"></span>

            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="text" asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Email"></span>

            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Full Name</label>
                <input asp-for="FullName" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="FullName"></span>

            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Confirm password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="exampleInputPassword1">
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="button-div d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Sign up</button>
            </div>
        </form>
        <a asp-action="SignIn">Go to Sign In</a>
    </div>
</div>